/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "newLine": "lf",
    "target": "ES2022",
    "skipLibCheck": true                                 
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "./__tests__",
    "./coverage"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
